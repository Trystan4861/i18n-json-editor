// Ejemplo de configuración para VS Code settings.json
// Copia estas configuraciones en tu archivo settings.json del workspace o global

{
  // Configuración básica para carpetas soportadas
  "i18nJsonEditor.supportedFolders": [
    "i18n",           // Carpeta simple en la raíz
    "src/i18n",       // Ruta relativa
    "./locales",      // Ruta relativa con ./
    "app/translations" // Otra ruta relativa
  ],
  
  // Permitir traducciones vacías (opcional)
  "i18nJsonEditor.allowEmptyTranslations": false,
  
  // Otras configuraciones opcionales
  "i18nJsonEditor.forceKeyUPPERCASE": true,
  "i18nJsonEditor.jsonSpace": 2,
  "i18nJsonEditor.keySeparator": ".",
  "i18nJsonEditor.lineEnding": "\n"
}